name: Documentation Automater

# **What it does**: Pushes Rustdoc HTML files to GitHub Wiki.
# **Why we have it**: To keep wiki documentation up-to-date.
# **Who does it impact**: Wiki content.

on:
  workflow_dispatch:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
      - uses: actions/checkout@v1
      
      - name: Upload Documentation to Wiki
        uses: indigoblueinnovations/github-wiki-publish-action@v1
        with:
          path: "target/doc/dicediele"
        env:
          GH_PERSONAL_ACCESS_TOKEN: ${{ secrets.GH_PERSONAL_ACCESS_TOKEN }}
